### Global functions ###

# Display command-line help
help() {
  echo "$SC usage:"
  echo "$SC subcommand [PARAMETERS]"
}

# Import a common module
require() {
  if [ -r "$SCLIBDIR/$1" ]; then
    source "$SCLIBDIR/$1"
  else
    return 2
  fi
}


### Main program ###

# Command-line parsing
if [ -z "${ARGS[0]}" ]; then
  help
  exit 1
fi

subcmd="${ARGS[0]}"
ARGS=("${ARGS[@]:1}")

if ! [ "$SCINSTALLED" ]; then
  if [ "$subcmd" != "install" ]; then
    echo "$SC is not installed."
    echo "Please install with the following command:"
    echo "  # $SC install"
    exit 1
  fi
fi

if [ "$subcmd" = "install" ]; then
  if [ -r "$SCCURBINDIR/lib/commands/install" ]; then
    source "$SCCURBINDIR/lib/commands/install"
    install
  else
    echo "Error: Install module not found."
    exit 1
  fi
  exit 0
fi

if [ -r "$SCCMDDIR/$subcmd" ]; then
  source "$SCCMDDIR/$subcmd"
  $subcmd
else
  echo "$subcmd: subcommand not found"
  exit 1
fi

