nfssrv_setup() {
  syspackage nfs-kernel-server rpc.nfsd
  cat > /etc/exports <<EOF
/ 192.168.0.0/24(rw,sync,no_subtree_check,no_root_squash,crossmnt,fsid=0)
EOF
  systemctl enable nfs-kernel-server
  systemctl restart nfs-kernel-server
}

nfssrv_enabled() {
  if [ -e /etc/exports ] && which rpc.nfsd &>/dev/null; then
    return 0
  fi
  return 1
}

nfssrv_ready() {
  if nfssrv enabled && grep "/ 192.168.0.0/24" /etc/exports &>/dev/null; then
    return 0
  fi
  return 1
}

nfssrv() {
  subcall nfssrv "$@"
}
