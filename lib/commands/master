# Module to access master server

master_help() {
cat <<EOF
$SC master
  Do operations with the master server

$SC master setup [REMOTE]
  Initialize a link between this server and a remote.
  REMOTE must be of the form USER@HOST.
  Example: $SC master setup root@example.com
EOF
}

master_setup() {
  require settings
  require sshlink
  syspackage rsync rsync

  settings choice MASTER_MODE "standby" "Select relationship with the master server" \
     "master" "Master server, hosts all services" \
    "standby" "Standby server, synchronize periodically all services" \
     "backup" "Backup server, only stores data backup" \
     "client" "Local client, access data through NFS" \
    "roaming" "Remote client, synchronize only selected users"

  if [ "$MASTER_MODE" != "master" ]; then
    settings prompt MASTER "" "Enter master server user and host (empty if this host is the master):"
    if ! sshlink has "$MASTER"; then
      sshlink add "$MASTER"
    fi
    echo "Linked successfully to $MASTER"
  else
    MASTER=""
  fi

  settings save

  require utils setup
  case "$MASTER_MODE" in
    "master")
      require nfssrv setup
      require mail setup
      require roundcube setup
      require owncloud setup
      require wstunnel setup
      ;;
    "standby")
      require nfssrv setup
      require mail setup
      require roundcube setup
      require owncloud setup
      require wstunnel setup
      require user setup
      ;;
    "backup")
      require backup setup
      require user setup
      ;;
    "client")
      require nfsclient setup
      require user setup
      ;;
    "roaming")
      require user setup
      ;;
  esac
}

master_promote() {
  if ! master ready; then
    echo "Master package not configured"
    exit 2
  fi
  if [ "$MASTER_MODE" != "standby" ]; then
    echo "$MASTER_MODE hosts cannot be promoted to master"
    exit 2
  fi

  require user
  user cleanup

  require settings
  MASTER_MODE="master"
  settings save
}

master_demote() {
  if ! master ready; then
    echo "Master package not configured"
    exit 2
  fi
  if [ "$MASTER_MODE" != "master" ]; then
    echo "$MASTER_MODE hosts cannot be put to standby"
    exit 2
  fi
  
  require settings
  require user
}

# Synchronize to master
master_sync() {
}

# Undo the link to the master
master_cleanup() {
  require settings
  unset MASTER
  unset MASTER_MODE
  settings save
}

master_mode() {
  if [ "$MASTER_MODE" ]; then
    echo "$MASTER_MODE"
  else
    echo "master" # No master defined, we are the master
  fi
}

master_enabled() {
  if [ -z "$MASTER" ] || ! [ -r "$HOME/.ssh/id_rsa" ]; then
    return 1
  fi
  return 0
}

master_ready() {
  if master enabled; then
    return 0
  fi
  return 1
}

master_getfile() {
  local source="$1"; shift
  local dest="$1"; shift

  rsync -az "$MASTER:${sources[@]}" "$dest"
}

master_exec() {
  local rv
  if [ "$MASTER" ]; then
    if ssh "$MASTER" "$SC master exec" "$@"; then
      rv=0
    else
      rv="$?"
    fi
  else
    if "$@"; then
      rv=0
    else
      rv="$?"
    fi
  fi
  return $rv
}

master_status() {
  if [ "$MASTER" ]; then
    echo "This host is a $(master mode) points to master host $MASTER"
  else
    echo "This host is a master"
  fi
}

master_settings() {
  echo MASTER
  echo MASTER_MODE
}

master() {
  subcall master "$@"
}
